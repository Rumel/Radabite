<div id="CreateEventModal" class="reveal-modal small" data-reveal>
    <h2>Create an Event!</h2>
    <form action="/Event/Create" method="post">
        <div class="row">
            <div class="large-8 columns">
                Event name: <input type="text" name="title">
            </div>
        </div>
        <div class="row">
            <div class="large-8 columns">
                Details: <input type="text" name="description">
            </div>
        </div>
        <div class="row">
            <div class="large-8 columns">
                Where: <input type="text" name="eventlocationname">
                <input type="hidden" name="eventlocationxcoord" />
                <input type="hidden" name="eventlocationycoord" />
            </div>
            <div class="large-4 columns">
                <a class="radius button" data-reveal-id="CreateEvent-MapModal" href="#">Map</a>
            </div>
        </div>
        <div class="row">
            <div class="large-4 columns">
                Start: <input type="text" name="startTime">
            </div>
            <div class="large-4 columns">
                Finish: <input type="text" name="endTime">
            </div>
            <div class="medium-2 columns">
                <a class="radius button" data-reveal-id="CreateEvent-PollModal" href="#">Poll</a>
            </div>
            <div class="medium-2 columns">
                <a class="radius button" data-reveal-id="CreateEvent-CalendarModal" href="#">Cal</a>
            </div>
        </div>
        <div class="row">
            <div class="large-8 columns">
                Privacy: <select name="privacy">
                    <option value="private" selected>Private</option>
                    <option value="public">Public</option>
                 </select>
            </div>
        </div>
        <input type="submit" name="Submit" value="Create">
        <a class="close-reveal-modal">&#215;</a>
    </form>
</div>

<div id="CreateEvent-MapModal" class="reveal-modal small" data-reveal>
    <a class="radius button" data-reveal-id="CreateEventModal" href="#">Back</a>
</div>

<div id="CreateEvent-PollModal" class="reveal-modal small" data-reveal>
    <a class="radius button" data-reveal-id="CreateEventModal" href="#">Back</a>
</div>

<div id="CreateEvent-CalendarModal" class="reveal-modal small" data-reveal>
    <a class="radius button" data-reveal-id="CreateEventModal" href="#">Back</a>
</div>