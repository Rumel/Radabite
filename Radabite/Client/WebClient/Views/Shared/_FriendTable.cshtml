@using Radabite.Backend.Database;

@model List<User>
<table style="width: 100%">
	<thead><tr><th style="text-align: center">Friends</th></tr></thead>
	<tbody>
		@{
			if (Model.Count() == 0)
			{
				<tr><td>User has no friends :(</td></tr>
			}
			else
			{
				foreach (User friend in Model)
				{
								<!--These links currently link to the friend's personal profile - should be a different page?-->
					<tr><td>@Html.ActionLink(friend.DisplayName, "../UserProfile", new { userId = friend.Id })</td></tr>
				}
			}
		}
	</tbody>
</table>