@using Radabite.Backend.Database;
@using Radabite.Client.WebClient.ViewModels;

@{
    ViewBag.Title = "Profile";
}
@model ViewModel

<div class="row">
<hgroup class="title">
    <h2>@ViewBag.Message</h2>
</hgroup>

</div>

<div class="row">
    <div class="large-4 medium-4 columns">
        <h3>About</h3>
        <div style="width:302px;height:300px;border:1px black solid">
            <img src="http://baconmockup.com/302/300" alt="" />
        </div>
        <div class="panel">
            <p>
                <span>Name: Test Name</span>
                <br />
                <span>Location: Test Location</span>
            </p>
        </div>
		@{Html.RenderPartial("~/Client/WebClient/Views/Shared/_FriendTable.cshtml", Model.Friends);}
    </div>
    <div class="large-8 medium-8 columns">
        <h3>Your Events</h3>
        @foreach (var item in Model.Events){
            <div class="panel" style="width:600px;height:150px;border:1px solid #000;">
                <p>@item.Title</p>
                <p>@item.Description</p>
				@Html.ActionLink("Event", "../Event", new { eventId = item.Id })
            </div>
        }
    </div>
</div>
