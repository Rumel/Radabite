@using Radabite.Backend.Database

@{
    ViewBag.Title = "Discover Event";
}

@model List<User>

<div class="row">
<hgroup class="title">
    <h2>@ViewBag.Message</h2>
</hgroup>

</div>

<div class="row">
    <div class="large-4 medium-4 columns">
        <h3>Friends</h3>
		@{
			if(Model.Count() == 0)
			{
				<div style="width:300px;height:30px;border:1px solid #000;">You don't have any friends :(</div>
			}
			else
			{
				foreach(User friend in Model)
				{
					<!--These links currently link to the friend's personal profile - should be a different page?-->
					<div style="width:300px;height:30px;border:1px solid #000;">@Html.ActionLink(friend.DisplayName, "../UserProfile", new { userId = friend.Id } )</div>
				}
			}
		}
    </div>
    <div class="large-8 medium-8 columns">
        <h3>Find Events</h3>
        <div style="width:600px;height:100px;border:1px solid #000;">@Html.ActionLink("Event", "../Event", new { eventId = 1 , userId = ViewBag.userId })</div>
        <div style="width:600px;height:100px;border:1px solid #000;">@Html.ActionLink("Event", "../Event", new { eventId = 2 , userId = ViewBag.userId })</div>
        <div style="width:600px;height:100px;border:1px solid #000;">@Html.ActionLink("Event", "../Event", new { eventId = 3 , userId = ViewBag.userId })</div>
    </div>
</div>

